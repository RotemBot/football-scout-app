# Environment
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/football_scout_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=football_scout_db
DB_USER=username
DB_PASSWORD=password

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000

# JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Crawling Settings
CRAWL_DELAY_MS=2000
MAX_CONCURRENT_CRAWLS=3
CRAWL_TIMEOUT_MS=30000

# Puppeteer
PUPPETEER_HEADLESS=true
PUPPETEER_TIMEOUT=30000

# CORS
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Session
SESSION_SECRET=your-session-secret-here

# API Keys (if needed for future integrations)
# TRANSFERMARKT_API_KEY=your-transfermarkt-api-key
# FOOTBALL_API_KEY=your-football-api-key

# Football Data Sources (Backend Only)
# Source URLs and reliability configuration
TRANSFERMARKT_BASE_URL=https://www.transfermarkt.co.uk
TRANSFERMARKT_RELIABILITY=1
TRANSFERMARKT_TIMEOUT_MS=30000

SOCCERWAY_BASE_URL=https://int.soccerway.com
SOCCERWAY_RELIABILITY=2
SOCCERWAY_TIMEOUT_MS=25000

ZEROZERO_BASE_URL=https://www.zerozero.pt
ZEROZERO_RELIABILITY=3
ZEROZERO_TIMEOUT_MS=20000

SOFASCORE_BASE_URL=https://www.sofascore.com
SOFASCORE_RELIABILITY=4
SOFASCORE_TIMEOUT_MS=20000

# Dynamic Source Discovery
ENABLE_DYNAMIC_SOURCES=true
MAX_DYNAMIC_SOURCES=3
DYNAMIC_SOURCE_TIMEOUT_MS=15000
